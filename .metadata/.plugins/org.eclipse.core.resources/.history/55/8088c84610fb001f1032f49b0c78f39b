

package Servlets;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Date;
import java.text.ParseException;
import java.text.SimpleDateFormat;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import Dao.Hotel_has_Usuario;
import Dao.Hotel_has_UsuarioDAO;

/**
 * Servlet implementation class AdicionaContatoServlet
 */
public class AdicionaHHUServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response)
		throws IOException, ServletException {
	
		PrintWriter out = response.getWriter();

		int idHotel  = Integer.parseInt(request.getParameter("idHotel"));	
		int idUsuario = Integer.parseInt(request.getParameter("idUsuario"));
		int avaliacao = Integer.parseInt(request.getParameter("avaliacao"));
		Date dataVisita = null;
		SimpleDateFormat sdf = new SimpleDateFormat();
		try {
			sdf.parse(request.getParameter("diaVisita")+"/"+request.getParameter("mesVisita")+"/"+request.getParameter("anoVisita"));
		} catch (ParseException e) {
			e.printStackTrace();
		}
		
		Hotel_has_Usuario hhu = new Hotel_has_Usuario();
		hhu.setIdHotel(idHotel);
		hhu.setIdUsuario(idUsuario);
		hhu.setAvaliacao(avaliacao);
		hhu.setDataVisita(dataVisita);
			
		// salva o contato
		Hotel_has_UsuarioDAO adicao = new Hotel_has_UsuarioDAO();
		adicao.adiciona(hhu);
		
		
		// imprime o nome do contato que foi adicionado
		out.println("<html>");
		out.println("<body>");
		out.println("<meta http-equiv=\"refresh\" content=\"1; url=adiciona_hhserv.jsp?idhotel="+idHotel+"\">");
		out.println("</body>");
		out.println("</html>");	
	}	
}
