

package Servlets;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import Dao.Hotel_has_SitioTuristico;
import Dao.Hotel_has_SitioTuristicoDAO;

/**
 * Servlet implementation class AdicionaContatoServlet
 */
public class AdicionaHHUServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response)
		throws IOException, ServletException {
	
		PrintWriter out = response.getWriter();

		int idHotel  = Integer.parseInt(request.getParameter("idHotel"));	

		// pegndo os parâmetros do request
		int cont = Integer.parseInt(request.getParameter("contador"));
		int array[] = new int[cont]; 		
		
		for(int i = 0; i<cont; i++){
			if(request.getParameter("sitioTuristico"+Integer.toString((i)))!=null){
				array[i] = Integer.parseInt(request.getParameter("sitioTuristico"+Integer.toString((i))));
			}
		}
		for(int i = 0; i<array.length; i++){
			Hotel_has_SitioTuristico hhs = new Hotel_has_SitioTuristico();
			hhs.setIdHotel(idHotel);
			hhs.setIdSitioTuristico(array[i]);
			
			// salva o contato
			Hotel_has_SitioTuristicoDAO adicao = new Hotel_has_SitioTuristicoDAO();
			adicao.adiciona(hhs);
		
		}
		
		// imprime o nome do contato que foi adicionado
		out.println("<html>");
		out.println("<body>");
		out.println("<meta http-equiv=\"refresh\" content=\"1; url=adiciona_hhserv.jsp?idhotel="+idHotel+"\">");
		out.println("</body>");
		out.println("</html>");	
	}	
}
