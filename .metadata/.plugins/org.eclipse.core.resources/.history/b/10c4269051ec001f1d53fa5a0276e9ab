

package Servlets;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import Dao.Hotel_has_SitioTuristico;
import Dao.Hotel_has_SitioTuristicoDAO;
import Dao.Servico_has_Usuario;
import Dao.Servico_has_UsuarioDAO;

/**
 * Servlet implementation class AdicionaContatoServlet
 */
public class AdicionaSHUServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response)
		throws IOException, ServletException {
	
		PrintWriter out = response.getWriter();

		int idUsuario  = Integer.parseInt(request.getParameter("idUsuario"));	

		// pegndo os parâmetros do request
		int cont = Integer.parseInt(request.getParameter("contador"));
		int array[] = new int[cont]; 		
		
		for(int i = 0; i<cont; i++){
			if(request.getParameter("servico"+Integer.toString((i)))!=null){
				array[i] = Integer.parseInt(request.getParameter("servico"+Integer.toString((i))));
			}
		}
		for(int i = 0; i<array.length; i++){
			Servico_has_Usuario shu = new Servico_has_Usuario();
			shu.setIdServico(array[i]);
			shu.setIdusuario(idUsuario);
			
			// salva o contato
			Servico_has_UsuarioDAO adicao = new Servico_has_UsuarioDAO();
			adicao.adiciona(shu);
		
		}
		
		// imprime o nome do contato que foi adicionado
		out.println("<html>");
		out.println("<body>");
		out.println("<meta http-equiv=\"refresh\" content=\"1; url=exibe_usuario.jsp?idhotel="+idUsuario+"\">");
		out.println("</body>");
		out.println("</html>");	
	}	
}
