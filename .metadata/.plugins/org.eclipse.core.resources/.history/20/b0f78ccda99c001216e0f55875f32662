package Servlets;

import java.io.IOException;
import java.io.PrintWriter;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import Dao.CaronaOferecida;
import Dao.CaronaOferecidaDAO;

public class AdicionaCaronaOferecidaServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response)
		throws IOException, ServletException {
	
		PrintWriter out = response.getWriter();

		// pegndo os parâmetros do request
		String origem = request.getParameter("origem");
		String destino = request.getParameter("destino");
		String parada1 = request.getParameter("parada1");
		String parada2 = request.getParameter("parada2");
		String parada3 = request.getParameter("parada3");
		int idUsuario = request.getParameter("idUsuario");
	    String horaSaida = request.getParameter("horaSaida");
	    String horaChegada = request.getParameter("parada3");
	    int vagas = request.getParameter("parada3");
	    double kgBagagem = request.getParameter("parada3");
	    double preco = request.getParameter("parada3");
	    int tempoEspera = request.getParameter("parada3");
	    String observacoes = request.getParameter("parada3");
		
		CaronaOferecida r = new CaronaOferecida();
		r.setOrigem(origem);
		r.setDestino(destino);
		r.setParada1(parada1);
		r.setParada2(parada2);
		r.setParada3(parada3);
		
		CaronaOferecidaDAO dao = new CaronaOferecidaDAO();
		dao.adiciona(r);

		CaronaOferecidaDAO dao2 = new CaronaOferecidaDAO();
		int idRota2 = dao2.getLast();
		
		out.println("<html>");
		out.println("<body>");
		out.println("<meta http-equiv=\"refresh\" content=\"1; url=exibe_veiculo.jsp?idRota ="+idRota2+"\">");
		out.println("</body>");
		out.println("</html>");
	}	
}
