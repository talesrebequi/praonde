package Servlets;

import java.io.IOException;
import java.io.PrintWriter;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import Dao.Usuario;
import Dao.UsuarioDAO;

public class AdicionaVeiculoServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
	@Override
	protected void service(HttpServletRequest request, HttpServletResponse response)
		throws IOException, ServletException {
	
		PrintWriter out = response.getWriter();

		// pegndo os parâmetros do request
		String marca = request.getParameter("marca");
		String modelo = request.getParameter("modelo");
		String cor = request.getParameter("cor");
		int ano = Integer.parseInt(request.getParameter("ano"));
		String placa = request.getParameter("placa");
		
		Veiculo v = new Veiculo();
		u.setEmail(email);
		u.setNome(nome);
		u.setEndereco(endereco);
		u.setCpf(cpf);
		u.setNascimento(nascimento);
		u.setPais(pais);
		u.setCidade(cidade);
		u.setUsualter(usualter);
		u.setDtalter(dtalter);
		u.setSenha(senha);
		u.setTelefone(telefone);
		u.setCelular(celular);
		
		UsuarioDAO dao = new UsuarioDAO();
		dao.adiciona(u);

		UsuarioDAO dao2 = new UsuarioDAO();
		int idUsuario2 = dao2.getLast();
		
		out.println("<html>");
		out.println("<body>");
		out.println("<meta http-equiv=\"refresh\" content=\"1; url=exibe_usuario.jsp?idUsuario="+idUsuario2+"\">");
		out.println("</body>");
		out.println("</html>");
	}	
}
